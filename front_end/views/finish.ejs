<header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
  <p class="h5 my-0 me-md-auto fw-normal"><a class="navbar-brand" href="/">E-voting</a> </p>
</header>
<br>
<main class="form-signin">
  
  <p class="h5 my-0 me-md-auto fw-normal"><a class="navbar-brand" href="/dashboard">Back</a> </p>
  <br>
  <form class="container" action="/vote/make/finish" method="POST">
    
    <br>
    <% if(typeof candidats != 'undefined') { %>
  <% if(candidats.length != 0) { %>
  <h1 class="h3 mb-3 fw-normal">Select your candidat</h1>
    <% candidats.forEach(function(candidat){ %>
      
      <div class="form-check">
        <input class="form-check-input" type="radio" name="choice" id="flexRadioDefault1" value="<%= candidat._id %>">
        <label class="form-check-label" for="flexRadioDefault1" >
          <%= candidat.nom %>
        </label>
      </div>
 
    <% }); %>
    <input type="text" id="inputEmail" class="form-control" placeholder="Intitulé du vote" required autofocus name="ident_vote" value="<%= id_vote%> " disabled>
  
  <% } %>
<% } %>
    <br>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Make your vote</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
  </form>
</main>

